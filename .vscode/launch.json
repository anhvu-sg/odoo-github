    "version": "0.2.0",
    "configurations": [
        {
            "name": "Odoo13-pg12-debug",
            "request": "launch",
            "type": "python",
            "program": "${workspaceRoot}/odoo/odoo-bin",
            "args": [
                "-c", "${workspaceRoot}/config/dev.conf",
                "--addons-path", "${workspaceRoot}/odoo/odoo/addons, ${workspaceRoot}/odoo/addons",
